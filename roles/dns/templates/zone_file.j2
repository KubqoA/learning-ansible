{% set domain = hostname.domain_name %}
{% set serial = '2022051207' %}
;
; BIND data file for local zone {{ hostname }}.{{ domain_name }};
$TTL    15M
@       IN      SOA     ns1.{{ hostname }}.{{ domain_name }}. root.{{ hostname }}.{{ domain_name }}. (
                     {{serial}}         ; Serial
                            15M         ; Refresh
                             5M         ; Retry
                           120M         ; Expire
                            600 )       ; Negative Cache TTL
@              IN      NS      ns1
@              IN      A       {{ ip }}
ns1            IN      A       {{ ip }}
{{ hostname }} IN      A       {{ ip }}
www            IN      CNAME   @
proxy          IN      CNAME   @
wordpress      IN      CNAME   @
